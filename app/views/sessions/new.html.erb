<h1 class="center" > LOG IN </h1>

<%= form_for(:session, :html => {class: "form-horizontal center", role: "form" }, url: login_path) do |f| %>

<!-- TITLE -->
<div class="control-label form-group row">
    <div class="col-sm-2">
        <%= f.label :email %>
    </div>
    <div class="col-sm-8">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true  %>
    </div>
</div>

<!-- EMAIL -->
<div class="control-label form-group row">
    <div class="col-sm-2">
        <%= f.label :password %>
    </div>
    <div class="col-sm-8">
        <%= f.password_field :password, class: "form-control", autcomplete: "off" %>
    </div>
</div>


<!-- SUBMIT BUTTON -->
<div class="control-label form-group row">
    <div class="col-auto offset-sm-2">
        <%= f.submit "Log in", class: "btn btn-primary btn-lg" %> <br />
    </div>
</div>

<% end %>

<!-- LINK BACK TO ARTICLES INDEX PAGE -->
<div class="col-sm-4 offset-sm-4">
    [ <%= link_to "Cancel request and return to user listing", articles_path %> ]
</div>