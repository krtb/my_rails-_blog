<div class="col-sm-12">
<h1 class="col-sm-4 offset-sm-5" > All Users</h1>

<div class="col-sm-4 offset-sm-4" >
<%= will_paginate :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
</div>
    
<% @users.each do |user|  %>
<ul class="listing list-group col-sm-8 offset-sm-4">
    <div class="row listing-row col-sm-12">
        <div class="list-group-item col-sm-6">
            <li>
                <%= link_to gravatar_for(user), user_path(user) %>
            </li>
            <li class="article-title">
                <%= link_to  user.username, user_path(user) %>
            </li>
            <li>
                <small>
                    <%= pluralize(user.articles.count, "article") if user.articles  %>
                </small>
            </li>
        <% if logged_in? && current_user.admin?  %>
        <li>
            <%= link_to "Delete this user", user_path(user), method: :delete, data: {confirm: "Are you sure that you want to delete this user and all their articles?"} %>
        </li>
        <% end %>
        </div>
    </div>
</ul>
<% end %>
</div>
